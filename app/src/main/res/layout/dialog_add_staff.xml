<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewmodel"
            type="com.app.schoolmanagement.admin.ui.staff.StaffViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_display_semibold"
                    android:gravity="center_horizontal"
                    android:text="Add Staff"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

                <Spinner
                    android:id="@+id/class_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:background="#00000000"
                    android:fontFamily="@font/roboto_light"
                    android:hint="Class Name"

                    android:inputType="text"
                    android:text="@={viewmodel.class_name}"
                    android:textColor="#000"
                    android:textColorHint="#d3d3d3" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="9dp"
                    android:background="#b9b9b9" />

                <Spinner
                    android:id="@+id/section_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:background="#00000000"
                    android:fontFamily="@font/roboto_light"
                    android:hint="Section Name"
                    android:inputType="text"
                    android:text="@={viewmodel.section_name}"
                    android:textColor="#000"
                    android:textColorHint="#d3d3d3" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="9dp"
                    android:background="#b9b9b9" />

                <EditText
                    android:id="@+id/total_student"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="#00000000"
                    android:fontFamily="@font/roboto_light"
                    android:hint="Total Students"

                    android:inputType="text"
                    android:text="@={viewmodel.total_student}"
                    android:textColor="#000"
                    android:textColorHint="#d3d3d3" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="9dp"
                    android:background="#b9b9b9" />

                <Button
                    android:id="@+id/buttonOk"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/button_bg"
                    android:text="Ok"
                    android:textColor="@color/colorPrimary" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>